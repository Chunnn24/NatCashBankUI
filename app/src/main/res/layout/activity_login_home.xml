<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/Ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Ll_viewGone"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/collap_bar"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_feature"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_rectangle_feature"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/img_deposit" />

                <TextView
                    android:id="@+id/txt_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Deposit"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_rectangle_feature"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/img_withdraw" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Withdraw"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_rectangle_feature"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/img_banking" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Banking"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_rectangle_feature"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/img_qr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="My QR"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@drawable/shape_toolbar">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/avata" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name" />

                                <TextView
                                    android:id="@+id/txt_numberUser"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Phone" />
                            </LinearLayout>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_bell"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/ic_bell"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_bell" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_update"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="32dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toLeftOf="@+id/btn_bell"
                            android:background="@drawable/button05"
                            android:drawableStart="@drawable/img_crown"
                            android:drawablePadding="10dp"
                            android:padding="10dp"
                            android:text="Update"
                            android:textAlignment="viewEnd"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <LinearLayout
                            android:id="@+id/Ll_sloGan"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="100dp"
                            android:background="@drawable/slogan"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_slogan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Upgrade to"
                                android:textColor="#FFB800" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text=" Gold"
                                android:textColor="#FFB800"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="70dp"
                                android:layout_height="34dp"
                                android:layout_marginStart="160dp"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/button06"
                                android:text="Go"
                                android:textAllCaps="false"
                                android:textColor="#FFFFB800" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/Cv_view"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_below="@+id/Ll_sloGan"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            app:cardCornerRadius="25dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FF9243"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="25dp"
                                        android:layout_marginTop="5dp"
                                        android:text="View balence"
                                        android:textColor="@color/white"
                                        android:textSize="18sp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginTop="12dp"

                                        android:src="@drawable/img_uneye" />

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="120dp"
                                        android:layout_marginTop="10dp">

                                        <TextView
                                            android:id="@+id/txt_natLogin"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="sans-serif-condensed-medium"
                                            android:text="Nat"
                                            android:textColor="@color/white"
                                            android:textSize="25sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_toRightOf="@+id/txt_natLogin"
                                            android:fontFamily="sans-serif-condensed-medium"
                                            android:text="Cash"
                                            android:textColor="#00659F"
                                            android:textSize="25sp"
                                            android:textStyle="bold" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="25dp"
                                        android:text="******"
                                        android:textColor="@color/white"
                                        android:textSize="28dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="240dp"
                                        android:text="HTG"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Rc_feature"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/Cv_view"
                            android:fitsSystemWindows="true"
                            android:nestedScrollingEnabled="true"
                            app:layout_collapseMode="parallax">
                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>

                </RelativeLayout>

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/img_Slider"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="380dp"
                    android:scaleType="fitXY"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="20"
                    app:iss_delay="0"
                    app:iss_period="4000">

                </com.denzcoskun.imageslider.ImageSlider>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_Slider"
                    android:layout_marginTop="20dp">

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_service"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/recyclerview"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/button04"
                    android:text="View all service"
                    android:textAllCaps="false"
                    android:textColor="#F4A022"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_MenuINews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_service"
                    android:layout_marginTop="10dp" />
                <RelativeLayout
                    android:layout_below="@+id/rcv_MenuINews"
                    android:id="@+id/people"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/transparent"
        android:background="@color/white">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomAppBar"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="10dp">
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bottomNavigationView"
                android:layout_marginEnd="20dp"
                app:labelVisibilityMode="labeled"
                android:background="@color/white"
                app:menu="@menu/bottom_menu"/>
        </com.google.android.material.bottomappbar.BottomAppBar>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFF28230"
            android:src="@drawable/img_scaner"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="25dp"
            app:tint ="@color/white"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>